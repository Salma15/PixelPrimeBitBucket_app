<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_12">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_6">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chat_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user_profile"
            app:civ_border_width="2dp"
            android:scaleType="centerCrop"
            app:civ_border_color="#fafafa"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_1"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/contentWithBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/chat_drawable"
            android:paddingLeft="6dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <com.medisensehealth.fdccontributor.views.CustomTextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxWidth="220dp"
                android:paddingTop="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:textSize="@dimen/sp_16"/>

        </LinearLayout>

        <com.medisensehealth.fdccontributor.views.CustomTextView
            android:id="@+id/txtTimings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_1"
            android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>