<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:layout_gravity="center_vertical"
         android:background="@color/feeds_bg"
         android:layout_marginRight="@dimen/dp_5">
         <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
             android:id="@+id/appt_filter_todays"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Upcoming"
             android:textColor="@color/colorPrimary"
             android:gravity="center"
             android:paddingTop="@dimen/dp_6"
             android:paddingBottom="@dimen/dp_6"
             android:paddingLeft="@dimen/dp_10"
             android:paddingRight="@dimen/dp_10"
             android:textSize="@dimen/sp_14"/>
     </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="center_vertical"
             android:background="@color/feeds_bg"
             android:layout_marginRight="@dimen/dp_5">
             <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                 android:id="@+id/appt_filter_all"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="All"
                 android:textColor="@color/colorPrimary"
                 android:gravity="center"
                 android:paddingTop="@dimen/dp_6"
                 android:paddingBottom="@dimen/dp_6"
                 android:paddingLeft="@dimen/dp_10"
                 android:paddingRight="@dimen/dp_10"
                 android:textSize="@dimen/sp_14"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:visibility="gone"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="@dimen/dp_5">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal"
                 android:layout_gravity="center_vertical"
                 android:gravity="center_vertical"
                 android:paddingLeft="@dimen/dp_10"
                 android:paddingRight="@dimen/dp_10"
                 android:id="@+id/appt_filter_seldate" >

                 <ImageView
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:src="@mipmap/calender_icon"/>

                 <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                     android:id="@+id/appt_filter_seldate_text"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="--Select date--"
                     android:hint="--Select date--"
                     android:textColorHint="@color/colorPrimary"
                     android:textColor="@color/colorPrimary"
                     android:gravity="center"
                     android:focusable="false"
                     android:textSize="@dimen/sp_14"/>
             </LinearLayout>
         </LinearLayout>

     </LinearLayout>


        <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ( OR )"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginTop="@dimen/dp_10"/>

        <com.medisensehealth.fdccontributor.views.CustomTextView
            android:id="@+id/appt_filter_labelfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Appointment From"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.medisensehealth.fdccontributor.views.CustomTextView
            android:id="@+id/appt_filter_from"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:hint=" -- Select Date -- "
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_5"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/dp_5"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.medisensehealth.fdccontributor.views.CustomTextView
            android:id="@+id/appt_filter_labelto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Appointment To"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.medisensehealth.fdccontributor.views.CustomTextView
            android:id="@+id/appt_filter_to"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:hint=" -- Select Date -- "
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_5"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/dp_5"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Search"
            android:id="@+id/appt_submit_filter"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_20"
            android:background="@color/colorPrimary"/>
        </LinearLayout>

</LinearLayout>
