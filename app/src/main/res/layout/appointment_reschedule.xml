<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">

        <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reschedule Appointment"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>

        <com.medisensehealth.fdccontributor.views.CustomTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date Here "
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/spinner_bg"
            android:paddingLeft="@dimen/dp_10"
            android:visibility="gone"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_marginRight="3dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/calender_icon"/>

            <com.medisensehealth.fdccontributor.views.CustomTextView
                android:id="@+id/editTextDialogUserInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:hint=" -- Select Date -- "
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:textColorHint="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@drawable/spinner_bg"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_appt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/drop" />

            </RelativeLayout>

        </LinearLayout>



        <com.medisensehealth.fdccontributor.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Time Here "
            android:textColor="@color/black"
            android:clickable="true"
            android:editable="false"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_5"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_appt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/dp_10"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/drop" />

        </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/appt_reschedule_submit"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"/>


    </LinearLayout>


</LinearLayout>
