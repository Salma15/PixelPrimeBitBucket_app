<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardMaxElevation="4dp"
        card_view:cardElevation="2dp"
        card_view:contentPadding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.medisensehealth.fdccontributor.views.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/report_folder_username"
                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"/>

            <com.medisensehealth.fdccontributor.views.CustomTextViewItalicBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/report_folder_date"
                android:text="[ Created Date ]"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/report_folder_recyclerview"
            android:layout_marginTop="@dimen/dp_5"/>


    </LinearLayout>


</android.support.v7.widget.CardView>
</LinearLayout>
