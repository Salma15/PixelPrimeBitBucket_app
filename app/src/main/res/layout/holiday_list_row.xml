<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/holid_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_1"
        card_view:cardCornerRadius="12dp"
        card_view:contentPaddingTop="10dp"
        card_view:contentPaddingBottom="10dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/dp_10">

        <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:id="@+id/holid_date"
            android:hint="Date"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorPrimary"/>

        <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:id="@+id/holid_reason"
            android:hint="Enter Reson"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textPrimary"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/holid_cancel"
            android:src="@mipmap/cancel_icon"/>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
