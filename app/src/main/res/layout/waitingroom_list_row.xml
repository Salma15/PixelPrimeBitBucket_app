<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/waiting_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="10dp"
        card_view:cardMaxElevation="10dp"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wait_token_num"
                android:textSize="30sp"
                android:text="0"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/rounded_textview"
                android:textColor="@android:color/white" />


            <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wait_name"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_18"
                android:maxLines="3"
                android:textColor="@color/colorPrimary"
                android:text="Patient Name"/>

            <com.medisensehealth.fdccontributor.views.CustomTextViewItalic
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wait_visittime"
                android:text="Visit Time"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/textPrimary"/>

            <com.medisensehealth.fdccontributor.views.CustomTextViewItalic
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wait_status"
                android:text="Status"
                android:maxLines="2"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                android:textColor="#ff3b00"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
