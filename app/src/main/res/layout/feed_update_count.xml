<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/toolbar_notification"
        android:paddingRight="@dimen/dp_10">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="24dp"
                app:srcCompat="@mipmap/notification_icon"
                android:id="@+id/toolbar_notify" />

            <com.medisensehealth.fdccontributor.views.CustomTextView
                android:id="@+id/badge_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/toolbar_notify"
                android:layout_alignRight="@id/toolbar_notify"
                android:layout_alignEnd="@id/toolbar_notify"
                android:text="0"
                android:minWidth="@dimen/dp_12"
                android:minHeight="@dimen/dp_4"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:paddingLeft="@dimen/dp_2"
                android:background="@drawable/badge_circle"/>
</RelativeLayout>