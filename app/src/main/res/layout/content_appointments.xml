<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.appointments.AppointmentsNewActivity"
    tools:showIn="@layout/fragment_appointments">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include layout="@layout/headertabs"
                android:id="@+id/headertabs" />

            <com.medisensehealth.fdccontributor.views.CustomTextViewItalic
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/appoint_novalue"
                android:text="Today no appointments scheduled !!!"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:visibility="gone"
                android:gravity="center"
                android:clickable="false"
                android:layout_margin="@dimen/dp_10"
                android:layout_gravity="center"/>

            <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/appoint_swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srl_direction="both" >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/appoint_recycleriew"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />
            </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/appoint_refresh"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:adjustViewBounds="true"
            android:src="@mipmap/refresh_icon"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitStart" />

    </FrameLayout>

</LinearLayout>
