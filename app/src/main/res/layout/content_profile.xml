<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.settings.ProfileActivity"
    tools:showIn="@layout/activity_profile">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_upload"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:layout_gravity="bottom|right"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="@mipmap/edit_icon" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/profile_image"
                            android:layout_gravity="bottom|center_horizontal"
                            android:src="@drawable/user_profile"
                            android:layout_marginTop="@dimen/dp_20"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FF000000"/>

                        <com.medisensehealth.fdccontributor.views.CustomEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:cursorVisible="true"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingRight="@dimen/dp_20"
                            android:background="@drawable/edittext_input_line_primary"
                            android:id="@+id/profile_name"
                            android:textColor="@color/colorPrimary"/>

                    </LinearLayout>



                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:id="@+id/profile_mobile"
                            android:hint="Mobile Number (10 digits)"
                            android:inputType="phone|textNoSuggestions"
                            android:singleLine="true"
                            android:textColor="@color/textPrimary"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:background="@drawable/view_line_dotted"
                            android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number 2: (Optional) "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_mobile2"
                        android:hint="Mobile Number (10 digits)"
                        android:inputType="phone|textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>


                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year of Experience: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_years_exp"
                        android:hint="Experience (in yrs)"
                        android:inputType="textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email ID: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_email"
                        android:hint="Email ID"
                        android:inputType="textNoSuggestions|textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Country: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/profile_country"
                        android:theme="@style/CountryStyle"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ccp_showFullName="true"
                        app:ccp_showPhoneCode="true"
                        android:background="@drawable/view_line_dotted"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="State: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/view_line_dotted"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/profile_state_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@mipmap/drop" />
                    </RelativeLayout>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_city"
                        android:hint="City"
                        android:inputType="textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specialty: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <MultiAutoCompleteTextView
                        android:id="@+id/profile_specialty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:completionThreshold="1"
                        android:hint="Add Specialty"
                        android:gravity="left"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hospital: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <MultiAutoCompleteTextView
                        android:id="@+id/profile_hospital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:completionThreshold="1"
                        android:hint="Add Hospital"
                        android:gravity="left"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14dp"
                        android:textStyle="bold"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Qualification: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_qualification"
                        android:hint="Qualification"
                        android:inputType="textNoSuggestions"
                        android:singleLine="false"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_website"
                        android:hint="Website"
                        android:inputType="textNoSuggestions"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Area of Expertise: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_areaofexp"
                        android:hint="Area of Expertise"
                        android:minLines="3"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Professional Contributions: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_prof_contribution"
                        android:hint="Professional Contributions"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:minLines="3"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Research Details: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_research_details"
                        android:hint="Research Details"
                        android:minLines="3"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Publications: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_publications"
                        android:hint="Publications"
                        android:minLines="3"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Online Opinion Cost: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_online_opinion_cost"
                        android:hint="Online Opinion Cost ( in Rs. )"
                        android:inputType="textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consultation Charges: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_consultation_charge"
                        android:hint="Consultation Charges ( in Rs. )"
                        android:inputType="textNoSuggestions"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Secretary Phone: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_secretary_phone"
                        android:hint="Secretary Phone"
                        android:inputType="textNoSuggestions|phone"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Secretary Email: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_secretary_email"
                        android:hint="Secretary Email"
                        android:inputType="textNoSuggestions|textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_teleop_checkbox"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="Ready for Tele Opinion?"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_teleop_num"
                        android:hint="Tele Opinion Contact Number"
                        android:inputType="textNoSuggestions|phone"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_videoop_checkbox"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="Ready for Video Opinion?"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_videoop_num"
                        android:hint="Video Opinion Contact Number"
                        android:inputType="textNoSuggestions|phone"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <com.medisensehealth.fdccontributor.views.CustomTextViewSemiBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available timings for Tele/Video Opinion: "
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/colorPrimary"/>

                    <com.medisensehealth.fdccontributor.views.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/profile_timing_op"
                        android:hint="Available timings"
                        android:inputType="textNoSuggestions"
                        android:singleLine="false"
                        android:textColor="@color/textPrimary"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/view_line_dotted"
                        android:textSize="14sp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPDATE PROFILE"
                        android:id="@+id/profile_submit"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:paddingRight="@dimen/dp_20"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

</LinearLayout>
